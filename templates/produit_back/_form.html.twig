{{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.nom, 'Name', {'label_attr': {'class': 'control-label col-md-2'}}) }}
        <div class="col-md-10">
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.imagefile, 'Image File', {'label_attr': {'class': 'control-label col-md-2'}}) }}
        <div class="col-md-10">
            {{ form_widget(form.imagefile, {'attr': {'class': 'form-control-file'}}) }}
            {{ form_errors(form.imagefile) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.prix, 'Price', {'label_attr': {'class': 'control-label col-md-2'}}) }}
        <div class="col-md-10">
            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prix) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.categorie, 'Category', {'label_attr': {'class': 'control-label col-md-2'}}) }}
        <div class="col-md-10">
            {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.categorie) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
        </div>
    </div>
{{ form_end(form) }}
